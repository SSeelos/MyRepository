<Window x:Class="MyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWPF"
        mc:Ignorable="d"
        Title="MyTitle" 
        SizeToContent="WidthAndHeight">
    <Border Padding="50" Background ="Green">
        <StackPanel>

            <Button Content="Basics" Click="Basics_Click"/>
            <Button Content="MVVM" Click="MVVM_Click"/>
            <TextBlock Text="MyProjects"/>
            <Button Content="UseLibrary" Click="UseLibrary_Click"/>
            <Button Content="MyConsoleApp" Click="MyConsoleApp_Click"/>


        </StackPanel>
        
    </Border>


</Window>
