<Window x:Class="MyWPF.MVVM.MyMVVMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWPF.MVVM"
        mc:Ignorable="d"
        Title="MyMVVMWindow" 
        SizeToContent="WidthAndHeight">

    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="BindedProperty"/>
            <TextBox Text="{Binding Path=MyProperty, Mode=TwoWay}"/>
            <TextBox Text="{Binding Path=MyProperty}" IsReadOnly="True" Background="#eee"/>
            <Button Content="MyCommand" Command="{Binding MyCommand}"/>
            <Button Content="Advanced" Click="Advanced_Click"/>
        </StackPanel>


    </Border>
</Window>
